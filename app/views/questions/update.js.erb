<% if @question.errors.any? %>
    $('.notice').html('<%= j I18n.t('question.notice.update.fail') %>')
<% else %>
    $('.notice').html('<%= j I18n.t('question.notice.update.success') %>')
    $('.question[data="' + <%= @question.id %> + '"]').replaceWith('<%= j render @question, detail: true %>');
<% end %>