h1=  @question.title
p= @question.body

.answers
  - @question.answers.each do |answer|
    p= answer.body
    
= render @question.answers
= render 'answers/new', question: @question, answer: @answer if user_signed_in?

p = link_to 'Delete question', question_path, method: :delete if current_user && current_user.id == @question.user_id